<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Lista de Feedbacks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    html, body {
      height: 100%;
      margin: 0;
    }
  </style>
</head>
<body class="d-flex justify-content-center align-items-center">
  <div class="container" style="max-width: 500px;">
    <h1 class="text-center mb-4"> Feedbacks Recebidos </h1>

    <ul class="list-group mb-4">
      <% feedbacks.forEach((fb, index) => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= fb.nome %></strong>: <%= fb.comentario %>
          </div>
          <form action="/feedbacks/remover" method="POST" class="mb-0">
            <input type="hidden" name="index" value="<%= index %>" />
            <button class="btn btn-danger btn-sm"> Remover </button>
          </form>
        </li>
      <% }); %>
    </ul>

    <a href="/" class="btn btn-primary" style="width: 100%;"> Voltar </a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
